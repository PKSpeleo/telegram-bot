{
  "name": "vpn-telegram-bot",
  "version": "0.1.3-alpha.15",
  "license": "MIT",
  "author": "Pavel Katkov",
  "main": "dist/app.ts",
  "scripts": {
    "lint": "yarn tsc --noEmit && yarn eslint .",
    "env:dev": "cp .env.dev .env",
    "env:prod": "cp .env.prod .env",
    "test": "yarn jest",
    "compile": "rm -rf dist && yarn tsc",
    "bundle": "mkdir dist/node && browserify --node --ignore-missing dist/js/src/app.js > dist/node/telegram_bot.js",
    "build": "yarn compile && yarn bundle",
    "start": "yarn build && yarn env:dev && node ./dist/node/telegram_bot.js",
    "develop": "yarn env:dev && nodemon src/app.ts",
    "gh-secrets-update": "gh secret set --env-file .env.prod",
    "deploy-env": "yarn gh-secrets-update && gh workflow run 'Build and Deploy'",
    "prepare": "husky install",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "browserify": "^17.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/ping": "^0.4.1",
    "chalk": "^4.1.2",
    "dayjs": "^1.11.1",
    "dotenv": "^16.0.0",
    "ping": "^0.4.1",
    "telegraf": "^4.7.0"
  },
  "keywords": [],
  "description": ""
}
